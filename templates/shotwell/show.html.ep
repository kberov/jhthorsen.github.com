% layout 'default';
% title $name;
<h1><%= $name %></h1>
<div class="navbar">
  <ul>
    <li><%= link_to 'Raw format', $raw %></li>
    <li><%= link_to 'Download', "$raw?download=1" %></li>
  </ul>
</div>
<div class="image preview">
  %= link_to $raw, begin
    %= image "$raw?inline=1024", alt => $name;
  % end
  <div class="caption">
    <h5><%= $name %></h5>
  </div>
</div>
