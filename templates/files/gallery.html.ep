% layout 'default';
% title $name;
<h1><%= $name %></h1>
% if($parent_path) {
<div id="navbar">
  <ul class="nav nav-tabs">
    <li class="back"><%= link_to 'Back', $parent_path %></li>
    <li class="raw image-link"><%= link_to 'Raw format', '/raw' %></li>
    <li class="download image-link"><%= link_to 'Download', "/download" %></li>
  </ul>
</div>
% }
<ul class="gallery">
  % unless(@$files) {
  <li>No images.</li>
  % }
  % for my $f (@$files) {
  <li id="<%= $f->{id} %>">
    % if($f->{type} eq 'directory') {
      %= link_to $f->{basename}, $f->{url}, class => 'directory'
    % } else {
      %= link_to $f->{url}, begin
        %= image '/image/not-loaded.png', 'data-src' => $f->{src}, alt => $f->{basename}, title => $f->{basename}
      % end
  </li>
    % }
  % }
</ul>
